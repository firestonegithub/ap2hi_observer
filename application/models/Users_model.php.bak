class Users_model extends CI_Model{
	

		function auth_user($username,$password){

		$query=$this->db->query("SELECT * FROM tb_user u ,  tb_user_detail d WHERE username='$username' AND password='$password' AND u.id_user = d.id_user  LIMIT 1");
		
