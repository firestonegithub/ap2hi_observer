<?php 
class Model_user extends CI_model{


	function select_lists(){

		$ci = & get_instance();

		$id_user = $ci->session->userdata('id_user'); 


		return $this->db->query("SELECT * FROM tb_user , tb_user_detail where active ='1' and tb_user.id_user = tb_user_detail.id_user and tb_user.id_user != '".$id_user."' order by tb_user.id_user  ");

	}


